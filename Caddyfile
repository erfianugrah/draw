{
    email {$EMAIL}
}

{$DOMAIN} {
    tls {
        dns cloudflare {$CF_API_TOKEN}
    }

    # Security headers
    header {
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        # XSS protection
        X-XSS-Protection "1; mode=block"
        # Referrer policy - don't leak URLs with encryption keys
        Referrer-Policy "strict-origin-when-cross-origin"
        # Remove server header
        -Server
    }

    # Handle CORS preflight (OPTIONS) for API routes
    # This must come BEFORE the actual API handlers to intercept preflight requests
    # before Cloudflare Access can redirect them
    @api_options {
        method OPTIONS
        path /api/*
    }
    handle @api_options {
        header Access-Control-Allow-Origin "{header.Origin}"
        header Access-Control-Allow-Methods "GET, POST, PUT, OPTIONS"
        header Access-Control-Allow-Headers "Content-Type, CF-Access-Client-Id, CF-Access-Client-Secret"
        header Access-Control-Allow-Credentials "true"
        header Access-Control-Max-Age "86400"
        respond 204
    }

    # AI API (text-to-diagram, diagram-to-code)
    handle_path /api/ai/* {
        # Add CORS headers for actual requests (with credentials support)
        header Access-Control-Allow-Origin "{header.Origin}"
        header Access-Control-Allow-Credentials "true"
        header Access-Control-Expose-Headers "X-Ratelimit-Limit, X-Ratelimit-Remaining"
        reverse_proxy excalidraw-ai:3004
    }

    # Storage API
    handle_path /api/* {
        # Add CORS headers for actual requests (with credentials support)
        header Access-Control-Allow-Origin "{header.Origin}"
        header Access-Control-Allow-Credentials "true"
        reverse_proxy excalidraw-storage:3003
    }

    # Socket.io for collaboration (WebSocket + polling)
    handle /socket.io/* {
        reverse_proxy excalidraw-room:3002
    }

    # Static files - Excalidraw frontend
    handle {
        root * /srv
        try_files {path} /index.html
        file_server
    }
}
